@model List<CVProjectMvc.Models.Entity.Egitim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="margin-top: 30px">
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Alt Başlık1</th>
            <th>Alt Başlık2</th>
            <th>GNO</th>
            <th>Tarih</th>
            <th>Sil</th>
            <th>Düzenle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Baslik</td>
                <td>@item.AltBaslik1</td>
                <td>@item.AltBaslik2</td>
                <td>@item.GNO</td>
                <td>@item.Tarih</td>
                <td>
                    <a class="btn btn-danger btn-sm" href="/Egitim/EgitimSil/@item.ID">
                        <i class="fas fa-trash">
                        </i>
                        Sil
                    </a>
                </td>
                <td>
                    <a class="btn btn-info btn-sm" href="/Egitim/EgitimGuncelle/@item.ID">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Düzenle
                    </a>
                </td>
            </tr>
        }
    </table>
    <a href="/Egitim/EgitimEkle/" class="btn btn-primary">Eğitim Ekle</a>
</div>