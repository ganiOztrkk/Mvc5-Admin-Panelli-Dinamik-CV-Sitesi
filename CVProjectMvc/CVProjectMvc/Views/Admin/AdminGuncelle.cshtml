@model CVProjectMvc.Models.Entity.Admin
@{
    ViewBag.Title = "AdminGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="margin-top: 40px">
    <form method="post">
        @Html.HiddenFor(x => x.ID)
        <br />
        <label>Kullanıcı Adı</label>
        @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control", @style = "width: 50%" })
        <br />
        <label>Şifre</label>
        @Html.PasswordFor(x => x.Sifre, new { @class = "form-control", @style = "width: 50%" })
        <br />
        <button class="btn btn-info">Güncelle</button>
    </form>
</div>