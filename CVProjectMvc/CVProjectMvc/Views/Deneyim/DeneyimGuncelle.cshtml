@model CVProjectMvc.Models.Entity.Deneyim
@{
    ViewBag.Title = "DeneyimGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="margin-top: 40px">
    <form method="post">
        @Html.HiddenFor(x => x.ID)
        <br />
        <label>Başlık</label>
        @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control", @style = "width: 50%" })
        <br />
        <label>Alt Başlık</label>
        @Html.TextBoxFor(x => x.AltBaslik, new { @class = "form-control", @style = "width: 50%" })
        <br />
        <label>Tarih</label>
        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control", @style = "width: 50%" })
        <br />
        <label>Açıklama</label>
        @Html.TextAreaFor(x=>x.Aciklama, new{@class="form-control", @rows=5})
        <br/>
        <button class="btn btn-info">Güncelle</button>
    </form>
</div>