@model List<CVProjectMvc.Models.Entity.Hobi>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<div class="container">
    <form method="post">
        @foreach (var item in Model)
        {
            <label>Açıklama 1</label>
            <textarea rows="10" class="form-control" name="Aciklama1">@item.Aciklama1</textarea>
            <label>Açıklama 2</label>
            <textarea rows="10" class="form-control" name="Aciklama2">@item.Aciklama2</textarea>
        }
        <br />
        <button class="btn btn-success">Güncelle</button>
    </form>
</div>