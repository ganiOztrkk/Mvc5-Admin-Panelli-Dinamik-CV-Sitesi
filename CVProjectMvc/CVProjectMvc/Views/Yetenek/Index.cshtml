@model List<CVProjectMvc.Models.Entity.Yetenek>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
    string renk = "";
}

<!DOCTYPE html>
<html>
<head>
</head>
<body class="hold-transition sidebar-mini">
    <br />
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th style="width: 10px">#</th>
                                        <th style="text-align: center">Beceri</th>
                                        <th style="width: 400px; text-align:center">Oran</th>
                                        <th style="width: 40px">Oran</th>
                                        <th style="text-align: center">İşlemler</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var item in Model)
                                    {
                                        sayac++;
                                        if (item.Oran <= 35)
                                        {
                                            renk = "progress-bar bg-danger";
                                        }
                                        if (item.Oran <= 50 && item.Oran > 35)
                                        {
                                            renk = "progress-bar bg-warning";
                                        }
                                        if (item.Oran > 50 && item.Oran <= 75)
                                        {
                                            renk = "progress-bar bg-primary";
                                        }
                                        if (item.Oran > 75)
                                        {
                                            renk = "progress-bar bg-success";
                                        }
                                        <tr>
                                            <td>@sayac</td>
                                            <td>@item.Yetenek1</td>
                                            <td>
                                                <div class="progress progress-xs">
                                                    <div class="@renk" style="width: @item.Oran%"></div>
                                                </div>
                                            </td>
                                            <td><span class="@renk">@item.Oran%</span></td>
                                            <td style="width: 170px; text-align: center">
                                                <a class="btn btn-info btn-sm" href="/Yetenek/YetenekGuncelle/@item.ID">
                                                    <i class="fas fa-pencil-alt">
                                                    </i>
                                                    Düzenle
                                                </a>
                                                <a class="btn btn-danger btn-sm" href="/Yetenek/YetenekSil/@item.ID">
                                                    <i class="fas fa-trash">
                                                    </i>
                                                    Sil
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                                <br/>
                                <a href="/Yetenek/YetenekEkle/" class="btn btn-primary">Yetenek Ekle</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>